---
import BaseLayout from '../layouts/BaseLayout.astro';

// This will be replaced with actual blog posts from markdown files
const blogPosts = [
  {
    title: "Getting Started with Astro",
    excerpt: "My experience learning Astro and why it's perfect for building static sites and blogs.",
    date: "2025-01-15",
    slug: "getting-started-with-astro",
    tags: ["Astro", "Static Sites", "Web Development"]
  },
  {
    title: "Building a Portfolio with GitHub Pages",
    excerpt: "A step-by-step guide to creating and deploying a developer portfolio using GitHub Pages.",
    date: "2025-01-10",
    slug: "portfolio-github-pages",
    tags: ["GitHub", "Portfolio", "Deployment"]
  },
  {
    title: "Learning JavaScript ES6+ Features",
    excerpt: "Exploring modern JavaScript features and how they improve code quality and developer experience.",
    date: "2025-01-05",
    slug: "javascript-es6-features",
    tags: ["JavaScript", "ES6", "Learning"]
  }
];
---

<BaseLayout title="Blog - Your Name" description="Read about my software development journey, tutorials, and insights.">
  <div class="blog">
    <div class="container">
      <header class="blog-header">
        <h1>My Blog</h1>
        <p>Documenting my journey as a developer, sharing what I learn, and exploring new technologies.</p>
      </header>

      <div class="blog-grid">
        {blogPosts.map((post) => (
          <article class="blog-card">
            <div class="blog-content">
              <div class="blog-meta">
                <time datetime={post.date}>
                  {new Date(post.date).toLocaleDateString('en-US', { 
                    year: 'numeric', 
                    month: 'long', 
                    day: 'numeric' 
                  })}
                </time>
              </div>
              <h2 class="blog-title">
                <a href={`/blog/${post.slug}`}>{post.title}</a>
              </h2>
              <p class="blog-excerpt">{post.excerpt}</p>
              <div class="blog-tags">
                {post.tags.map((tag) => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
              <a href={`/blog/${post.slug}`} class="read-more">
                Read More â†’
              </a>
            </div>
          </article>
        ))}
      </div>

      <div class="blog-cta">
        <h2>Want to stay updated?</h2>
        <p>Follow me on <a href="https://github.com/yourusername" target="_blank">GitHub</a> to see my latest projects and code.</p>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .blog {
    padding: 2rem 0 4rem;
  }

  .blog-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .blog-header h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
    color: var(--color-primary);
  }

  .blog-header p {
    font-size: 1.25rem;
    color: var(--color-text-light);
    max-width: 600px;
    margin: 0 auto;
  }

  .blog-grid {
    display: grid;
    gap: 2rem;
    margin-bottom: 4rem;
  }

  .blog-card {
    background: white;
    border-radius: 0.75rem;
    padding: 2rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .blog-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 25px -3px rgba(0, 0, 0, 0.1);
  }

  .blog-meta {
    margin-bottom: 1rem;
  }

  .blog-meta time {
    color: var(--color-text-light);
    font-size: 0.875rem;
    font-weight: 500;
  }

  .blog-title {
    margin-bottom: 1rem;
  }

  .blog-title a {
    color: var(--color-primary);
    text-decoration: none;
    font-size: 1.5rem;
    font-weight: 700;
    transition: color 0.2s ease;
  }

  .blog-title a:hover {
    color: var(--color-accent);
  }

  .blog-excerpt {
    color: var(--color-text-light);
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .blog-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .tag {
    background: var(--color-bg-secondary);
    color: var(--color-text);
    padding: 0.375rem 0.75rem;
    border-radius: 0.375rem;
    font-size: 0.875rem;
    font-weight: 500;
  }

  .read-more {
    color: var(--color-accent);
    text-decoration: none;
    font-weight: 600;
    transition: color 0.2s ease;
  }

  .read-more:hover {
    color: #2563EB;
  }

  .blog-cta {
    text-align: center;
    padding: 3rem 2rem;
    background: var(--color-bg-secondary);
    border-radius: 1rem;
  }

  .blog-cta h2 {
    font-size: 2rem;
    margin-bottom: 1rem;
    color: var(--color-primary);
  }

  .blog-cta p {
    font-size: 1.125rem;
    color: var(--color-text-light);
  }

  .blog-cta a {
    color: var(--color-accent);
    text-decoration: none;
    font-weight: 600;
  }

  .blog-cta a:hover {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .blog-header h1 {
      font-size: 2.5rem;
    }

    .blog-cta h2 {
      font-size: 1.75rem;
    }
  }
</style>